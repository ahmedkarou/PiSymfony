{% extends 'base.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}
<style>
        /* Style for the image */
        .club-image {
            max-width: 100px; /* Adjust the maximum width as needed */
            height: auto;
            margin-right: 10px; /* Add some spacing between the image and the text */
            border-radius: 5px; /* Add a border radius for rounded corners */
        }
    </style>
    <h1>Club index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Organizer</th>
                <th>Location</th>
                <th>Capacity</th>
                <th>CreatedAt</th>
                <th>Descripton</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                 
                <td>
                <img class="club-image" src="{{ asset('uploads/image/' ~ club.image) }}" alt="Livreur Image">
                </td>
                <td>{{ club.Name }}</td>
                <td>{{ club.organizer }}</td>
                <td>{{ club.location }}</td>
                <td>{{ club.capacity }}</td>
                <td>{{ club.createdAt ? club.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ club.descripton }}</td>
                <td>
                    <a href="{{ path('app_club_show', {'id': club.id}) }}">show</a>
                    <a href="{{ path('app_club_edit', {'id': club.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_club_new') }}">Create new</a>
{% endblock %}
